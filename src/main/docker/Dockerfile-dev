FROM java:20181211

MAINTAINER tony.lian@chinaventure.com.cn
ENV PROJECT_SPACE_DEMO_SERVER 1.0
ENV DEMO_SERVER 1.0
ENV APP_NAME DEMO_SERVER
ENV JAVA_XMS -Xms2048M
ENV JAVA_XMX -Xmx2048M
ENV CUSTOM.LOGGING.LEVEL.ROOT info
ENV CUSTOM.LOGGING.TARGET info-file
ENV CUSTOM.LOGGING.PATH /home/log/${APP_NAME}

COPY demo-0.0.1-SNAPSHOT.jar app.jar
ENTRYPOINT ["java","-jar","/app.jar","$JAVA_XMS","$JAVA_XMX","--spring.profiles.active=dev"]